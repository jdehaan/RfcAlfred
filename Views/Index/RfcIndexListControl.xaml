<UserControl x:Class="Alfred.Views.Index.RfcIndexListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:almi="clr-namespace:Alfred.ViewModels.Index"
             xmlns:alvi="clr-namespace:Alfred.Views.Index"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="640">
    <Grid>
        <Grid.Resources>
            <almi:RfcStatusToIconFilenameConverter x:Key="IconConverter"/>
        </Grid.Resources>
        <ListView
            VirtualizingStackPanel.IsVirtualizing="True"
            VirtualizingStackPanel.VirtualizationMode="Recycling"
            ScrollViewer.IsDeferredScrollingEnabled="True"
            ItemsSource="{Binding Entries}"
            >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="S" Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Width="16" Height="16" Source="{Binding CurrentStatus, Converter={StaticResource IconConverter}}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Id" Width="Auto" 
                                    DisplayMemberBinding="{Binding DocumentId}" />
                    <GridViewColumn Header="Date" Width="100"
                                    DisplayMemberBinding="{Binding Date}" />
                    <GridViewColumn Header="Title" Width="200"
                                    DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="Keywords" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <ItemsControl ItemsSource="{Binding Path=Keywords}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="IsAlso" Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <ItemsControl ItemsSource="{Binding Path=IsAlso}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="SeeAlso" Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <ItemsControl ItemsSource="{Binding Path=SeeAlso}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
